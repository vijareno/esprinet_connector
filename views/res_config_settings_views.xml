<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.esprinet</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Esprinet" string="Esprinet" name="esprinet_connector">
                        <block title="API Configuration" name="esprinet_api_config">
                            <setting string="Esprinet API Credentials" help="Configure your Esprinet API credentials">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="esprinet_username" class="col-lg-3 o_light_label" string="API Username"/>
                                        <field name="esprinet_username" class="col-lg-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="esprinet_password" class="col-lg-3 o_light_label" string="API Password"/>
                                        <field name="esprinet_password" widget="password" class="col-lg-9"/>
                                    </div>
                                </div>
                            </setting>
                        </block>
                        <block title="FTP Configuration" name="esprinet_ftp_config">
                            <setting string="FTP Catalogue Access" help="Configure FTP access for downloading product catalogue">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="esprinet_ftp_host" class="col-lg-3 o_light_label" string="FTP Host"/>
                                        <field name="esprinet_ftp_host" class="col-lg-9" placeholder="ftp.esprinet.com"/>
                                    </div>
                                    <div class="row">
                                        <label for="esprinet_ftp_username" class="col-lg-3 o_light_label" string="FTP Username"/>
                                        <field name="esprinet_ftp_username" class="col-lg-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="esprinet_ftp_password" class="col-lg-3 o_light_label" string="FTP Password"/>
                                        <field name="esprinet_ftp_password" widget="password" class="col-lg-9"/>
                                    </div>
                                    <div class="row">
                                        <label for="esprinet_ftp_path" class="col-lg-3 o_light_label" string="Catalogue Path"/>
                                        <field name="esprinet_ftp_path" class="col-lg-9" placeholder="/catalogue/Catalogue.json"/>
                                    </div>
                                    <div class="row mt16">
                                        <div class="col-lg-12">
                                            <button name="action_download_catalogue" string="Download Catalogue Now" type="object" class="btn btn-primary"/>
                                            <div class="text-muted mt8">
                                                Download and process the latest product catalogue from FTP server.
                                                This process may take several minutes for large files.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
